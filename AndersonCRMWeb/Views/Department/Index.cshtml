
@{
    ViewBag.Title = "Index";
}

<div ng-controller="DepartmentController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-4">
            <a href="../Department/Create" class="btn btn-default">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th>DepartmentId</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" ng-repeat="department in model.Departments" ng-click="$event.originalEvent.dropdown || model.GoToUpdatePage(department.DepartmentId)">
                        <td><span ng-bind="department.DepartmentId"></span></td>
                        <td><span ng-bind="department.Name"></span></td>
                        <td ng-click="$event.originalEvent.dropdown = true">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" ng-click="model.GoToUpdatePage(department.DepartmentId)">Edit</a></li>
                                    <li><a href="#" ng-click="model.Delete(department.DepartmentId)">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
