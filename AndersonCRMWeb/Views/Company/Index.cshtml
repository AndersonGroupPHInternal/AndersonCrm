
@{
    ViewBag.Title = "Index";
}

<div ng-controller="CompanyController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-4">
            <a href="../Company/Create" class="btn btn-default">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th>CompanyId</th>
                        <th>Color</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" ng-repeat="company in model.Companies" ng-click="$event.originalEvent.dropdown || model.GoToUpdatePage(company.CompanyId)">
                        <td><span ng-bind="company.CompanyId"></span></td>
                        <td><span ng-bind="company.Color"></span></td>
                        <td><span ng-bind="company.Name"></span></td>
                        <td ng-click="$event.originalEvent.dropdown = true">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" ng-click="model.GoToUpdatePage(company.CompanyId)">Edit</a></li>
                                    <li><a href="#" ng-click="model.Delete(company.CompanyId)">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>