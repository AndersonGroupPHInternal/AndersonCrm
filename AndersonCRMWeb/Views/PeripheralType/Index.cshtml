
@{
    ViewBag.Title = "Index";
}

<div ng-controller="PeripheralTypeController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-4">
            <a href="../PeripheralType/Create" class="btn btn-default">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th>PeripheralTypeId</th>
                        <th>Color</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" ng-repeat="peripheralType in model.PeripheralTypes" ng-click="$event.originalEvent.dropdown || model.GoToUpdatePage(peripheralType.PeripheralTypeId)">
                        <td><span ng-bind="peripheralType.PeripheralTypeId"></span></td>
                        <td><span ng-bind="peripheralType.Color"></span></td>
                        <td><span ng-bind="peripheralType.Name"></span></td>
                        <td ng-click="$event.originalEvent.dropdown = true">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" ng-click="model.GoToUpdatePage(peripheralType.PeripheralTypeId)">Edit</a></li>
                                    <li><a href="#" ng-click="model.Delete(peripheralType.PeripheralTypeId)">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>